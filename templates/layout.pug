doctype html
block vars
    - var bodyclass = null;
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            title
                block title
                    = locals.name
            link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
            link(rel='stylesheet', href=contents.css['main.css'].url)
    body(class=bodyclass)
        header.header
            div.content-wrap
                block header
                div.image-container
                    img(src='/images/e5c3a4f2-ea12-4fb5-bd9d-611df3b51c16.JPG', alt='Description')
                div.logo
                    h1
                        a(href=locals.url)= locals.name
                nav
                    ul
                        li
                            a(href='/blog/') blog
                        li
                            a(href='/portfolio/') portfolio
                        li
                            a(href='/contact/') contact
                        li
                            a(href='/photography/') photography
        //script(src=contents.js['script.js'].url)
    div#content
        div.content-wrap
            block content  // This is where you might define a content block to be overridden in other files
                //div#blog-section.hidden
                //    h2 Blog Section
                //    p This is the blog content.
                //div#portfolio-section.hidden
                //    h2 Portfolio Section
                //    p This is the portfolio content.
                //div#contact-section.hidden
                //    h2 Contact Section
                //    p This is the contact content.

    footer
        div.content-wrap
            block footer
                section.about
                    !=contents['about.md'].html
                section.copy
                    p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                        a(href='https://github.com/jnordberg/wintersmith') Wintersmith
