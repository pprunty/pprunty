doctype html
block vars
    - var bodyclass = null;
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            title
                block title
                    = locals.name
            link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
            link(rel='stylesheet', href=locals.stylesheet)
            link(rel='icon', href=locals.url + '/assets/images/favicon.ico', type='image/x-icon')

            // Basic Meta Tags
            meta(name='description', content="Software projects, blog posts and photography.")
            meta(name='author', content='Patrick Prunty')
            meta(name='keywords', content='Patrick Prunty, Portfolio, Software Developer, Python, C++, Data Engineering, AI, Machine Learning, iOS, Creative Writing, Photography')

            // Open Graph Meta Tags
            meta(property='og:title', content="Patrick Prunty's Portfolio")
            meta(property='og:description', content="Software projects, blog posts and photography.")
            meta(property='og:image', content=locals.url + '/assets/images/thumbnail.JPG')
            meta(property='og:url', content=locals.url)

            // Twitter Card Meta Tags
            meta(name='twitter:card', content='summary')
            meta(name='twitter:title', content="Patrick Prunty's Portfolio")
            meta(name='twitter:description', content="Software projects, blog posts and photography.")
            meta(name='twitter:image', content=locals.url + '/assets/images/thumbnail.JPG')

            // Google Analytics
            script(async src="https://www.googletagmanager.com/gtag/js?id=G-08HZ6HBLML")
            script.
              window.dataLayer = window.dataLayer || [];
              function gtag(){dataLayer.push(arguments);}
              gtag('js', new Date());
              gtag('config', 'G-08HZ6HBLM');
    body(class=bodyclass)
        header.header
            div.content-wrap
                block header
                if !hideHeader
                    div.image-container
                        img(src=locals.url + '/assets/images/9fe51fdc-666f-471e-a0aa-12fb27d8d5eb.JPG', alt='Description')
                    div.logo
                        h1
                            a(href=locals.url)= locals.name
                    nav
                        ul(id='navList')
                            li
                                a(href=locals.url + '/', class='nav-item') blog
                            li
                                a(href=locals.url + '/portfolio/', class='nav-item') portfolio
                            li
                                a(href=locals.url + '/photography/', class='nav-item') photography
                            li
                                a(href=locals.url + '/contact/', class='nav-item') contact
    div#content
        div.content-wrap
            block content  // This is where you might define a content block to be overridden in other files
    button#scrollToTop(title='Go to top' onclick='scrollToTopFunction()')
        svg(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke='white', width='32', height='32')
            path(stroke-linecap='round', stroke-linejoin='round', d='M4.5 15.75l7.5-7.5 7.5 7.5', stroke-width='1.5')
    script.
        // Function to scroll to top
        function scrollToTopFunction() {
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

        // Show button when scrolling down
        window.addEventListener('scroll', function () {
            var scrollPosition = window.scrollY;
            var btn = document.getElementById('scrollToTop');

            if (scrollPosition > 350) {  // Adjust this value based on when you want to show the button
                btn.style.display = 'block';
            } else {
                btn.style.display = 'none';
            }
        });
    script.
        // Function to set active nav link based on current URL
        function setActiveNavLink() {
            const currentURL = window.location.href;
            const navItems = document.querySelectorAll('.nav-item');

            navItems.forEach((item) => {
                const itemHref = item.getAttribute('href');
                if (currentURL === itemHref || (currentURL + '/' === itemHref)) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        }

        // Call the function to set the active nav link
        setActiveNavLink();
    script(src=locals.url + "/assets/pdfs/thesis.pdf", data-pdfjs-src=locals.url + "/js/pdfThumbnails.js")
    footer
        div.content-wrap
            block footer
                section.about
                    !=contents['about.md'].html
                section.copy
                    p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                        a(href='https://github.com/jnordberg/wintersmith') Wintersmith
                        //- please leave the "powered by" if you use the design
