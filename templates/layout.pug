doctype html
block vars
    - var bodyclass = null;
html(lang='en')
    head
        block head
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
            meta(name='viewport', content='width=device-width')
            title
                block title
                    = locals.name
            link(rel='alternate', href=locals.url + '/feed.xml', type='application/rss+xml', title=locals.description)
            link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
            link(rel='stylesheet', href=contents.css['main.css'].url)
    body(class=bodyclass)
        header.header
            div.content-wrap
                block header
                div.image-container
                    img(src=locals.url + '/images/e5c3a4f2-ea12-4fb5-bd9d-611df3b51c16.JPG', alt='Description')
                div.logo
                    h1
                        a(href=locals.url)= locals.name
                nav
                    ul
                        li(class=(locals.page === 'blog' ? 'active' : ''))
                            a(href=locals.url + '/blog/') blog
                        li(class=(locals.page === 'portfolio' ? 'active' : ''))
                            a(href=locals.url + '/portfolio/') portfolio
                        li(class=(locals.page === 'photography' ? 'active' : ''))
                            a(href=locals.url + '/photography/') photography
                        li(class=(locals.page === 'contact' ? 'active' : ''))
                            a(href=locals.url + '/contact/') contact

        //script(src=contents.js['script.js'].url)
    div#content
        div.content-wrap
            block content  // This is where you might define a content block to be overridden in other files
    script.
        document.addEventListener('DOMContentLoaded', function () {
            var currentPath = window.location.pathname;
            var navItems = document.querySelectorAll('#navList li a');

            navItems.forEach(function (item) {
                if (item.getAttribute('href') === currentPath) {
                    item.parentElement.classList.add('active');
                }
            });
        });
    button#scrollToTop(title='Go to top' onclick='scrollToTopFunction()') Top
    script.
        // Function to scroll to top
        function scrollToTopFunction() {
            window.scrollTo({top: 0, behavior: 'smooth'});
        }

        // Show button when scrolling down
        window.addEventListener('scroll', function () {
            var scrollPosition = window.scrollY;
            var btn = document.getElementById('scrollToTop');

            if (scrollPosition > 350) {  // Adjust this value based on when you want to show the button
                btn.style.display = 'block';
            } else {
                btn.style.display = 'none';
            }
        });
    footer
        div.content-wrap
            block footer
                section.about
                    !=contents['about.md'].html
                section.copy
                    p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
                        a(href='https://github.com/jnordberg/wintersmith') Wintersmith
