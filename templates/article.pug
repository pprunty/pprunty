extends layout

block vars
  - var hideHeader = true;

block prepend title
  | #{ page.title + ' - '}

block header
  div.nav-back
    a(href=locals.url + contents.index.url) &laquo; Full blog
  include author
  h1= page.title
  p.author
    | #{ 'Written by ' }
    +author(page.metadata.author)
    div.image-container-small
      img(src=locals.url + '/assets/images/logo.JPG')

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
  div.nav
    a(href=locals.url + contents.index.url) &laquo; Full blog
